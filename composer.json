{
    "name":              "brain/cortex",
    "description":       "Cortex is a package that implements a routing system in WordPress.",
    "keywords":          [
        "wordpress",
        "routing",
        "fast route",
        "router",
        "rewrite rules",
        "pretty permalink"
    ],
    "homepage":          "https://github.com/Giuseppe-Mazzapica/Cortex",
    "license":           "MIT",
    "authors":           [
        {
            "name":     "Giuseppe Mazzapica",
            "email":    "giuseppe.mazzapica@gmail.com",
            "homepage": "http://gm.zoomlab.it",
            "role":     "Developer"
        }
    ],
    "support":           {
        "issues": "https://github.com/Giuseppe-Mazzapica/Cortex/issues",
        "source": "https://github.com/Giuseppe-Mazzapica/Cortex"
    },
    "require":           {
        "php":              ">=5.4",
        "nikic/fast-route": "~0.7.0",
        "psr/http-message": "^0.9"
    },
    "require-dev":       {
        "phpunit/phpunit": "4.8.*",
        "mockery/mockery": "0.9.3",
        "brain/monkey":    "~1.2.0",
        "gmazzap/andrew":  "~1.0.0"
    },
    "autoload":          {
        "psr-4":    {
            "Brain\\Cortex\\": "src/"
        },
        "classmap": [
            "Routes.php",
            "Cortex.php"
        ]
    },
    "autoload-dev":      {
        "psr-4": {
            "Brain\\Cortex\\Tests\\": "tests/src/"
        }
    },
    "minimum-stability": "stable",
    "config":            {
        "optimize-autoloader": true
    }
}
